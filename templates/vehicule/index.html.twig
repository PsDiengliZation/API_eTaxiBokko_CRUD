{% extends 'base.html.twig' %}

{% block title %}Page Vehicule{% endblock %}

{% block body %}
    <h1>La Page des Véhicules</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Immatricule</th>
                <th>Modèle</th>
                <th>Marque</th>
                <th>Nombre de Places</th>
                <th>Visite Technique</th>
                <th>Assurances</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for vehicule in vehicules %}
            <tr>
                <td>{{ vehicule.id }}</td>
                <td>{{ vehicule.immatricule }}</td>
                <td>{{ vehicule.modele }}</td>
                <td>{{ vehicule.marque }}</td>
                <td>{{ vehicule.nbrePlace }}</td>
                <td>{{ vehicule.visiteTechnique }}</td>
                <td>{{ vehicule.assurance }}</td>
                <td>
                    <a href="{{ path('vehicule_show', {'id': vehicule.id}) }}">Afficher</a>
                    <a href="{{ path('vehicule_edit', {'id': vehicule.id}) }}">Éditer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">Aucun enregistrement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('vehicule_new') }}">Créer un nouvel véhicule</a>
{% endblock %}
